<div class="container-fluid">
  <div class="row">
    <% @photos.each do |photo| %>
      <div class="col-sm-2 col-md-4">
        <%= image_tag(photo.image_url, class: "img-responsive") %>
        <h1><%= photo.title %></h1>
        <p><%= photo.description %></p>
        <p><%= link_to 'Show', photo %></p>
        <p><%= link_to 'Edit', edit_photo_path(photo) %></p>
        <p><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div><!-- /col -->
    <% end %>
  </div>
</div>

